@using Fire.Business.Encryption
@model AllLayoutViewModel
@{
    ViewData["Title"] = "GetBeforeFisWithCustomerid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        @if (ViewBag.error != null)
                        {
                            <span class="text-danger">@ViewBag.error</span>
                        }
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Tarih</th>
                                        <th>Gün içinde verilen miktar</th>
                                        <th></th>

                                    </tr>
                                    @foreach (var customer in Model.productQauntityViewModels)
                                    {
                                        <tr class="Search">
                                            <td></td>
                                            <td>@customer.createdate.ToString("ddd-MM-yyyy")</td>
                                            <td>@customer.quantity</td>
                                            <td style="text-align:right">
                                                <a href="/Customer/GetFisByid/?quantity=@CommondMethod.ConvertToEncrypt(@customer.quantity+","+@customer.createdate.ToShortDateString())" name="id" class="btn btn-inverse-success btn-fw btn-sm">Göster</a>
                                                <a href="/Customer/FullPaid/?quantity=@CommondMethod.ConvertToEncrypt(@customer.id+","+@customer.quantity+","+@customer.createdate.ToShortDateString())" name="id" class="btn btn-inverse-secondary btn-fw btn-sm">Ödemeler</a>
                                            </td>
                                        </tr>
                                    }
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Tüm Haklar Saklıdır. © 2023</span>
            <!-- <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">  <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin templates</a> from Bootstrapdash.com</span> -->
        </div>
    </footer>
</div>

