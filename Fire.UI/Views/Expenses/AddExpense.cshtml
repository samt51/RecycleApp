@model AllLayoutViewModel
@{
    ViewData["Title"] = "AddExpense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .whiteColor {
            color: white !important;
        }
    </style>
</head>



<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Gider Kaydet </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                </ol>
            </nav>
        </div>

        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        @if (ViewBag.error != null)
                        {
                            <div class="alert-danger">@ViewBag.error</div>
                        }
                        else if (ViewBag.success != null)
                        {
                            <div class="alert-success">@ViewBag.success</div>
                        }
                        @*      <h4 class="card-title">Basic form elements</h4>
                        <p class="card-description"> Basic form elements </p>*@
                        <form asp-controller="Expenses" asp-action="AddExpense" class="forms-sample" name="formadd" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputEmail3">Gider Kategorisi</label>
                                @Html.DropDownListFor(x=>x.expenseCategoria.id,(List<SelectListItem>)ViewBag.expenseCategoria,"Seç",new{@class="form-control whiteColor",@id="expenseCategoria"})
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Açıklama</label>
                                <textarea class="form-control whiteColor" placeholder="Açıklama" asp-for="ExpenseDetail.Description"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword4">Gider</label>
                                <input class="form-control whiteColor" placeholder="Gider" id="giveMany" type="text" asp-for="ExpenseDetail.Price" required />
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.12/snippets/javascript.min.js"></script>
<script src="/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>


<script>




    $('#giveMany').keyup(function(event) {

        // skip for arrow keys
        if (event.which >= 37 && event.which <= 40) {
            event.preventDefault();
        }

        $(this).val(function(index, value) {
            return value
                .replace(/\D/g, "")
                .replace(/([0-9])([0-9]{2})$/, '$1.$2')
                .replace(/\B(?=(\d{3})+(?!\d)\.?)/g, ",")
                ;
        });
    });



</script>
<script type="text/javascript">


</script>



