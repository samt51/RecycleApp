@model AllLayoutViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <style>
        .whiteColor {
            color: white !important;
        }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datepicker/0.6.5/datepicker.css" />
</head>



<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Çalışan Kaydet </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                </ol>
            </nav>
        </div>

        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        @if (ViewBag.error != null)
                        {
                            <div class="alert-danger">@ViewBag.error</div>
                        }
                        <form asp-controller="Employees" asp-action="Add" name="formadd" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputName1">Ad</label>
                                <input type="text" class="form-control whiteColor" placeholder="İsim" asp-for="employees.Name" id="checkNo" required />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Soyad</label>
                                <input type="text" class="form-control whiteColor" placeholder="Soyad" asp-for="employees.Surname" id="checkNo" required />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Maaş</label>
                                <input type="text" class="form-control whiteColor" placeholder="İsim" asp-for="employees.Salary" id="giveMany" required />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">İşe Başlama Tarihi</label>
                                <input type="date" asp-for="employees.CreatedDate" class="form-control whiteColor" placeholder="Başlangıç Tarihi" id="checkNo" required />
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






 

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.12/snippets/javascript.min.js"></script>
<script src="/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>


<script>

    //function myfocus(x) {
    //    x.style.background = "yellow";
    //}
    
    $('#giveMany').keyup(function(event) {

        // skip for arrow keys
        if (event.which >= 37 && event.which <= 40) {
            event.preventDefault();
        }

        $(this).val(function(index, value) {
            return value
                .replace(/\D/g, "")
                .replace(/([0-9])([0-9]{2})$/, '$1.$2')
                .replace(/\B(?=(\d{3})+(?!\d)\.?)/g, ",")
                ;
        });
    });



</script>
<script type="text/javascript">


</script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/datepicker/0.6.5/datepicker.js">

</script>
<script type="text/javascript">
    $(document).ready(function() {
        $("#datepicker").datepicker({
            format: 'dd/mm/yyyy'
        })
    });
</script>